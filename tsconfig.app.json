{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./out-tsc/app", // Output directory for compiled files
        "types": [
            "node" // Include Node types if needed
        ],
        "paths": {
            "@env/*": ["./src/environments/*"] // Path mapping for environments
        }
    },
    "include": [
        "src/**/*.ts" // Include all TypeScript files in the src directory
    ],
    "exclude": [
        "src/**/*.spec.ts" // Exclude test files from compilation
    ]
}
